#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int n;
    scanf("%d",&n);
    if(n<=200)
    {
      int cost=n*0.5;
        printf("Rs.%d",cost);
    }
    else if(n<=400)
    {
      int cost=n*0.65+100;
        printf("Rs.%d",cost);
    }
    else if(n<=600)
    {
         int cost=n*0.80+200;
        printf("Rs.%d",cost);
    }
    else
    {
       int cost=n*1.25+425;
        printf("Rs.%d",cost);
    }  
    return 0;
}
